@model EcommerceHouse.Models.ViewModel.ProductsViewModel
@using EcommerceHouse.Extensions

<br />
<h2 class="text-dark">Delete Product</h2>

<form method="post">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Name">location</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Name" readonly class="form-control" />
                </div>               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>               
            </div>           
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes">House Type</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductTypes.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Tags">Bedrooms</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Tags.TagName" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Type">Bedrooms</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Type"readonly class="form-control" />
                </div>               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Available"></label>
                </div>
                <div class="col-8">
                    <input type="checkbox" readonly class="form-control" asp-for="Products.Available" />
                </div>
            </div>
        </div>
        <div class="col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" class="productImage" style="border-radius:5px; border:1px solid #808080;" />
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-dark">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


