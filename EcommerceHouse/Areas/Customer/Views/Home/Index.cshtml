@model List<EcommerceHouse.Models.Products>

<br />  
<br />  

<div class="row">
   @foreach(var product in Model)
   {
       <div class="col-4">
           <div class="card mb-4">
               <div class="card-header">
                   <h4 class="my-0 font-weight-normal">
                       <label style="font-size:23px; color:black;">@product.Name</label>
                   </h4>
               </div>
               <img class="card-img-top" style="height:300px; width:auto" src="@product.Image" alt="Card Image" />
               <div class="card-body">
                   <div class="d-flex justify-content-between align-items-center">
                       <div class="btn-group">
                           <label style="font-size:20px; color:black;"><b>£@product.Price</b></label>
                       </div>
                       <a asp-action="Details" asp-controller="Home" class="btn btn-dark pull-right btn-outline-dark" asp-route-id="@product.Id">Property Details</a>
                   </div>
               </div>
           </div>
       </div>
   }
</div>